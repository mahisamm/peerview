<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PeerView - Verify Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header text-center">
                        <h4>Verify Your Email</h4>
                        <p class="text-muted mb-0">Enter the 6-digit code sent to <strong><%= email %></strong></p>
                    </div>
                    <div class="card-body">
                        <form action="/verify" method="POST">
                            <div class="mb-3">
                                <label for="code" class="form-label">Verification Code</label>
                                <input type="text" 
                                       class="form-control text-center fs-3" 
                                       id="code" 
                                       name="code" 
                                       placeholder="123456" 
                                       maxlength="6" 
                                       pattern="\d{6}" 
                                       required 
                                       autofocus 
                                       style="letter-spacing: 10px; font-family: monospace;">
                                <div class="form-text">Check your inbox/spam. Expires in 1 hour.</div>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Verify & Login</button>
                        </form>
                        <div class="mt-3 text-center">
                            <a href="#" class="text-muted" onclick="resendCode(); return false;" style="text-decoration: none; cursor: pointer;">
                                Didn't receive? Resend Code
                            </a>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <a href="/login">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function resendCode() {
            fetch('/resend-code', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ email: '<%= email %>' })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Code resent! Check your email.');
                } else {
                    alert('Error: ' + (data.error || 'Try again.'));
                }
            })
            .catch(err => alert('Resend failed. Check console.'));
        }
    </script>
</body>
</html>