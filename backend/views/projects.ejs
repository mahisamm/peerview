<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PeerView - Projects</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body class="bg-light">
    <%- include('partials/navbar', { user: user }) %>
    <div class="container mt-5">
        <h2 class="text-center mb-4">All Projects</h2>
        <% if (projects.length === 0) { %>
            <div class="text-center">
                <p class="text-muted">No projects yet. <a href="/create-project">Create one now!</a></p>
            </div>
        <% } else { %>
            <div class="row">
                <% projects.forEach(p => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card shadow">
                            <div class="card-body">
                                <h5 class="card-title"><%= p.title %></h5>
                                <p class="card-text">By: <%= p.owner ? p.owner.username : 'Unknown User' %> <br> <%= p.description %></p>
                                <p>Tags: <%= p.tags ? p.tags.join(', ') : 'No tags' %></p>
                                <% if (p.fileUrl) { %>
                                    <% const ext = p.fileUrl.split('.').pop().toLowerCase(); %>
                                    <% if (['png', 'jpg', 'jpeg', 'gif'].includes(ext)) { %>
                                        <img src="<%= p.fileUrl %>" class="img-fluid mb-2" alt="Project Image">
                                    <% } else { %>
                                        <a href="<%= p.fileUrl %>" class="btn btn-sm btn-outline-primary mb-2" download>Download File</a>
                                    <% } %>
                                <% } %>
                                <hr>
                                <div class="scores">
                                    <p><strong>Scores:</strong><br>
                                        Clarity: <%= p.clarityScore || 'N/A' %>/5 | Creativity: <%= p.creativityScore || 'N/A' %>/5<br>
                                        Technicality: <%= p.technicalityScore || 'N/A' %>/5 | Overall: <%= p.overallScore || 'N/A' %>/5
                                    </p>
                                </div>
                                <% if (p.feedback) { %>
                                    <p><em>Feedback:</em> <%= p.feedback %></p>
                                <% } %>
                                <a href="/review/<%= p._id %>" class="btn btn-primary">Review It</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
        <div class="text-center mt-4"><a href="/" class="btn btn-secondary">Home</a></div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>